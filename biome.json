{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "!**/dist",
      "!**/.next",
      "!**/node_modules",
      "!**/.git",
      "!**/drizzle/**/*"
    ]
  },
  "linter": {
    "rules": {
      "a11y": "off",
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noMagicNumbers": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noBitwiseOperators": "off"
      },
      "nursery": {
        "useImageSize": "off"
      }
    }
  }
}
