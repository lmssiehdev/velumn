{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/dist",
			"!**/.next",
			"!**/node_modules",
			"!**/.git",
			"!**/drizzle/**/*"
		]
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"linter": {
		"rules": {
			"correctness": {
				"useImageSize": "off"
			},
			"performance": {
				"noImgElement": "off"
			},
			"a11y": "off",
			"complexity": {
				"useSimplifiedLogicExpression": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noMagicNumbers": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"noBitwiseOperators": "off",
				"noNonNullAssertedOptionalChain": "off",
				"noArrayIndexKey": "off"
			},
			"nursery": {
				"noIncrementDecrement": "off"
			}
		}
	}
}
