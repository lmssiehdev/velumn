{
  "name": "discord-indexer-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check-types": "turbo run check-types",
    "lint": "biome check . --write",
    "with-env": "bun run --env-file=../../.env --",
    "dev:web": "turbo --filter web dev",
    "build:web": "turbo --filter web build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2",
    "ultracite": "5.2.14"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "patchedDependencies": {
    "discord-markdown-parser@1.2.0": "patches/discord-markdown-parser@1.2.0.patch"
  }
}