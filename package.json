{
	"name": "discord-indexer-monorepo",
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"turbo": "^2.6.0",
		"typescript": "5.9.2",
		"ultracite": "6.3.2"
	},
	"packageManager": "bun@1.3.0",
	"patchedDependencies": {
		"discord-markdown-parser@1.2.0": "patches/discord-markdown-parser@1.2.0.patch"
	},
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"type-check": "turbo run type-check",
		"lint": "biome check . --write",
		"dev:web": "turbo --filter web dev",
		"dev:dashboard": "turbo --filter dashboard dev",
		"nuke": "bunx npkill -D -y && rm bun.lock"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
